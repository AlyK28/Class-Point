<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>

      <tab id="tabConnect" label="Connect" getVisible="GetConnectVisible">
        <group id="grpConnect" label="Login">
          <button id="btnConnect"
                  label="Connect"
                  size="large"
                  imageMso="HappyFace"
                  onAction="OnConnectClick"/>
        </group>
      </tab>

      <tab id="tabTeacher" label="Teacher" getVisible="GetTeacherVisible">
        <group id="grpTeacher" label="Account">
          <button id="btnLogout"
                  label="Logout"
                  size="large"
                  imageMso="Logoff"
                  onAction="OnLogoutClick"/>
        </group>
      </tab>

    </tabs>
  </ribbon>
</customUI>
