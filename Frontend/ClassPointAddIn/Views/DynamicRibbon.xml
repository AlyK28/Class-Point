<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
	<ribbon>
		<tabs>

			<tab id="tabConnect" label="Connect" getVisible="GetConnectVisible">
				<group id="grpConnect" label="Login">
					<button id="btnConnect"
							label="Connect"
							size="large"
							imageMso="FileNew"
							onAction="OnConnectClick"/>
				</group>
			</tab>

			<tab id="tabTeacher" label="Teacher" getVisible="GetTeacherVisible">
				<group id="grpTeacher" label="Account">
					<button id="btnLogout"
							label="Logout"
							size="large"
							imageMso="FileClose"
							onAction="OnLogoutClick"/>
				</group>
				<group id="grpPresentation" label="Presentation">
					<button id="btnStartSlideshow"
							label="Start Slideshow"
							size="large"
							imageMso="FileOpen"
							onAction="OnStartSlideshowClick"
							getEnabled="GetStartSlideshowEnabled"/>
				</group>
				<group id="grpQuizzes" label="Quizzes">
					<button id="btnQuizPanel"
							label="Quiz Manager"
							size="large"
							imageMso="PaneInsert"
							onAction="OnQuizPanelClick"
							getEnabled="GetQuizEnabled"/>
				</group>
			</tab>

		</tabs>
	</ribbon>
</customUI>