        {
          "name": "Register Teacher",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/register/",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "register", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{teacher_username}}\",\n  \"email\": \"{{teacher_email}}\",\n  \"password\": \"{{teacher_password}}\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Login (Obtain JWT)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/login/",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "login", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{teacher_username}}\",\n  \"password\": \"{{teacher_password}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const data = pm.response.json();",
                  "if (data && data.access) { pm.environment.set('teacher_jwt', data.access); }",
                  "if (data && data.refresh) { pm.environment.set('teacher_refresh', data.refresh); }"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "response": []
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/token/refresh/",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "token", "refresh", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{teacher_refresh}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
